CREATE TABLE T_TESTE_DDL (
    CD_TESTE    NUMBER(3)   NOT NULL,
    NM_TESTE    VARCHAR2(30)    NOT NULL,
    DS_TESTE    VARCHAR2(60)    NULL,
    DT_TESTE    DATE            NULL
);

ALTER TABLE T_TESTE_DDL ADD CONSTRAINT PK_TESTE_DLL PRIMARY KEY (CD_TESTE);

ALTER TABLE T_TESTE_DDL ADD CONSTRAINT UN_TESTE_DLL_NM UNIQUE (NM_TESTE);

ALTER TABLE T_TESTE_DDL ADD (DS_TELEFONE VARCHAR2(80), DS_OBS VARCHAR2(200)); 

ALTER TABLE T_TESTE_DDL MODIFY DS_TESTE NOT NULL;

ALTER TABLE T_TESTE_DDL MODIFY DT_TESTE DEFAULT SYSDATE;

ALTER TABLE T_TESTE_DDL MODIFY NM_TESTE NULL;

ALTER TABLE T_TESTE_DDL DROP COLUMN DS_OBS;

ALTER TABLE T_TESTE_DDL DROP CONSTRAINT PK_TESTE_DLL;

ALTER TABLE T_TESTE_DDL MODIFY DT_TESTE DEFAULT NULL;

ALTER TABLE T_TESTE_DDL RENAME TO T_TESTE_DDL_DOIS;


ALTER TABLE T_TESTE_DDL_DOIS RENAME COLUMN DS_EMAIL TO DS_EMAIL_NOVO;

DROP TABLE T_TESTE_DDL;

